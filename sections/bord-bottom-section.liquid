{{ 'bord-bottom-section.css' | asset_url | stylesheet_tag }}

<section class="section-bord-bottom">
  <div class="block-bottom">
    <h1 class="block-bottom-title">{{ section.settings.titleBottom }}</h1>
    <div class="block-bottom-text">
    <p class="text">{{ section.settings.textBottom }}</p>
    </div>
    <a class="block-bottom-link">HOW IT WORKS</a>
  </div>
  <img src="	{{ section.settings.image_top | image_picker }}" alt="">
</section>

{% schema %}
{
  "name": "title-bottom",
  "class": "title-sect-bottom",
  "settings": [
  {
    "type": "text",
    "id": "titleBottom",
    "label": "title"
  },
  {
    "type": "text",
    "id": "textBottom",
    "label": "text"
  },
  {
    "type": "image_picker",
    "id": "image_top",
    "label": "Image"
  }
  ]
}
{% endschema %}