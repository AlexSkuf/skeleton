{{ 'home-section.css' | asset_url | stylesheet_tag }}

<section class="slider-home">
  <div class="collection-1">

  <div class="collection-column swipper__container">
    <div class="collection-column-wrapper swiper-wrapper">
      <div class="collection-column-slider swiper-slider">
    <div class="collection-column">
      <p class="top-text">Collection 1</p>
      <h1 class="home-title">{{ section.settings.title }}</h1>
      <p class="home-subtitle">{{ section.settings.subtitle }}</p>
      <button class="home-button">View collection</button>
    </div>
  </div>
  </div>
</div>
  

    <div class="slider-img">
      <img src="{{ section.settings.home_image | img_url:'master' }}" alt="">
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "image",
    "class": "home-image",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Home title"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Home subtitle"
      },
    {
      "type": "image_picker",
      "id": "home_image",
      "label": "Home image"
    }
  ]
  }
{% endschema %}