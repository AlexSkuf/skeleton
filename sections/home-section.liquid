{% comment %} <h1 class="home-title">{{ section.settings.title }}</h1>
      <p class="home-subtitle">{{ section.settings.subtitle }}</p>

      <div class="slider-img">
        <img src="{{ section.settings.home_image | img_url:'master' }}" alt="">
      </div> {% endcomment %}


{% comment %} {% schema %}
  {
    "name": "image",
    "class": "home-image",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Home title"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Home subtitle"
      },
    {
      "type": "image_picker",
      "id": "home_image",
      "label": "Home image"
    }
  ]
  }
{% endschema %} {% endcomment %}